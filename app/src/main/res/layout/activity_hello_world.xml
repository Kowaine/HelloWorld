<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelloWorldActivity">

    <EditText
        android:id="@+id/num1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/add_symbol"
        app:layout_constraintBottom_toTopOf="@id/hello_world_text"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <TextView
        android:id="@+id/add_symbol"
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/num1"
        app:layout_constraintRight_toLeftOf="@id/num2"
        app:layout_constraintBottom_toTopOf="@id/hello_world_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/add_symbol"
        app:layout_constraintBottom_toTopOf="@id/hello_world_text"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/hello_world_text"
        android:text="@string/hello_string"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/sub_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_symbol" />

    <Button
        android:id="@+id/sub_button"
        android:text="@string/button_string"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:onClick="changeString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/hello_world_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sub_button2"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/sub_button2"
        android:text="@string/open_browser"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:onClick="openBrowser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/sub_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sub_button3"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/sub_button3"
        android:text="@string/change_activity"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:onClick="changeActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/sub_button2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>